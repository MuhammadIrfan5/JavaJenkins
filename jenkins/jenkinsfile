pipeline {
    agent any

    environment {
        // Optional: name your Docker image
        IMAGE_NAME = 'my-java-app'
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull code from GitHub
                checkout scm
            }
        }

        stage('Gradle Build') {
            steps {
                    // Make sure Gradle wrapper is executable
                    sh 'chmod +x ./gradlew'
                    // Build the project using Gradle wrapper
                    sh './gradlew clean build --no-daemon'
                }
        }

        stage('Docker Build') {
            steps {
                script {
                    docker.build("${env.IMAGE_NAME}:latest")
                }
            }
        }


    }

    post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo '✅ Build completed successfully!'
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}
